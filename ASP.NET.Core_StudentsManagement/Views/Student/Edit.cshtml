@model StudentCreateViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-controller="student" asp-action="edit" method="post" class="m-3" enctype="multipart/form-data">
    <input hidden asp-for="Student.Id" />
    <input hidden asp-for="Student.PhotoPath" />

    <div class="form-group row">
        <label asp-for="Student.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Student.Name" placeholder="请输入姓名" />
            <span asp-validation-for="Student.Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Student.Age" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Student.Age" placeholder="请输入年龄" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Student.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Student.Email" placeholder="请输入邮箱" />
            <span asp-validation-for="Student.Email" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Student.Dynasty" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Student.Dynasty" asp-items="Html.GetEnumSelectList<DynastyEnum>()" class="custom-select mr-sm-2"></select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" />
                <label class="custom-file-label">请选择照片...</label>
            </div>
        </div>
    </div>

    <div class="form-group row row col-sm-4 offset-4">
        <img class="imageThumbnail" src="~/images/@(Model.Student.PhotoPath)"/>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">更新</button>
            <a asp-action="index" asp-controller="student" class="btn btn-primary">取消</a>
        </div>
    </div>

    @section Scripts{
        <script type="text/javascript">
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next(".custom-file-label").html(fileName);
            });
        });
        </script>
    }

</form>